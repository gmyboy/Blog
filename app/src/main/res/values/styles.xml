<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
   <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_indigo_500</item>
        <item name="colorPrimaryDark">@color/material_indigo_600</item>
        <item name="colorAccent">@color/material_pink_500</item>
    </style>

    <style name="Style_Line_Ver">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="StyleLine_vertical">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="StyleLine_vertical_30">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">15dip</item>
        <item name="android:background">@color/grey</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="bottombar">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffa1a1a1</item>
    </style>

    <style name="seperator_layout_vertical">
        <item name="android:layout_width">0.6dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="ProgressDialog" parent="@style/Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="Dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="anim_pop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation"> @anim/popup_appear_anim</item>
        <item name="android:windowExitAnimation">@anim/popup_disappear_anim</item>
    </style>

    <style name="anim_pop_f">
        <item name="android:windowEnterAnimation">@anim/login_popup_appear_anim</item>
        <item name="android:windowExitAnimation"> @anim/login_popup_disappear_anim</item>
    </style>

    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>

    <style name="translucent_theme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Setting_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="full_image_progressbar" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_large_holo</item>
    </style>

    <style name="PROFILE_TXT_LEFT">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/profile_text_left</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ff919192</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PROFILE_TXT_CENTER">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/profile_center_text_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ff373737</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PROFILE_IMG_ARROW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/profile_img_right</item>
        <item name="android:src">@drawable/common_icon_arrow</item>
    </style>

</resources>