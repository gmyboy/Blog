<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_bottom"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="8dip"
    android:background="@drawable/userinfo_tab_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/de_img_tab_now"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dip"
        android:scaleType="centerCrop"
        android:src="@drawable/blogdetail_slider" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="2dp" >

        <LinearLayout
            android:id="@+id/de_tab_lay1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dip"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/me_tab_txt1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="转发 23"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/de_line"
            style="@style/StyleLine_vertical_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dip"
            android:layout_toRightOf="@+id/de_tab_lay1" />

        <LinearLayout
            android:id="@+id/me_tab_lay2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="6dip"
            android:layout_toRightOf="@+id/de_line"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/me_tab_txt2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="评论 12"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/me_tab_lay3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dip"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/me_tab_txt3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="赞 123"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>